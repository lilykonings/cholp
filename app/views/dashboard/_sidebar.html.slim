      a[href="/dashboard/manage"]
        li Manage prints

  - if current_user.role == 'administrator'
    fieldset.dashboard_nav.uk-margin-top
      legend Admin Settings
      ul
        a[href="/dashboard/home_features"]
          li Homepage Features
        a[href="/dashboard/updates"]
          li Updates
        a[href="/dashboard/top_creators"]
          li Top creators
        a[href=""]
          li Paypal Settings

  - else
    fieldset.dashboard_nav.uk-margin-top
      legend Transactions
      ul
        a[href="/dashboard/sold"]
          li Sell Prints
        a[href='/dashboard/purchased']
          li Purchased Prints
